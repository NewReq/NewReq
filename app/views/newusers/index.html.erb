<div class="container">
<h4>Requests for new users</h4>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Title</th>
      <th>Company</th>
      <th>Site</th>
      <th>Department</th>
      <th>Grant</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @newusers.each do |newuser| %>
      <tr>
        <td><%= newuser.firstname %></td>
        <td><%= newuser.lastname %></td>
        <td><%= newuser.title %></td>
        <td><%= newuser.company.name %></td>
        <td><%= newuser.site.name %></td>
        <td><%= newuser.department %></td>
        <td><%= newuser.grant.username %></td>
        <td><%= link_to 'Add to LDAP', {:controller => :ldap, :action => :create, :id => newuser.id}, class: "btn btn-default" %></td>
        <td><%= link_to 'Show', newuser, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_newuser_path(newuser), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', newuser, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

