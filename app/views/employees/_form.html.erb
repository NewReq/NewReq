<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Manager" %><br>
    <%= collection_select(:employee, :login_id, @logins, :id, :name, {:prompt => false}, class: "form-control") %>
  </div>
  <div class="field">
    <%= f.label :company_id %><br>
    <%= collection_select(:employee, :company_id, @companies, :id, :name, {:prompt => false}, class: "form-control") %>
  </div>
  <div class="field">
    <%= f.label :site_id %><br>
    <%= collection_select(:employee, :site_id, @sites, :id, :name, {:prompt => false}, class: "form-control") %>
  </div>
  <div class="field">
    <%= f.label :department %><br>
    <%= f.text_field :department, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :phoneext %><br>
    <%= f.text_field :phoneext, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :mobilephone %><br>
    <%= f.text_field :mobilephone, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
