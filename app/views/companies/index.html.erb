<div class="container">
  <h4>Listing Companies</h4>
  <p></p>            
<table class="table table-striped">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.note %></td>
        <td>
          <%= link_to 'Show', company, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_company_path(company), class: "btn btn-warning" %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

