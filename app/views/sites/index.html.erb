<div class="container">
  <h4>Listing Sites</h4>
  <br>
<table  class="table table-striped">
  <thead>
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.company.name %></td>
        <td><%= site.name %></td>
        <td><%= site.city %></td>
        <td><%= site.state %></td>
        <td><%= site.country %></td>
        <td><%= site.phone %></td>
        <td>
          <%= link_to 'Show', site, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_site_path(site), class: "btn btn-warning" %>
          <%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
