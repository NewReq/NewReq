<%= form_for(@ldapserver) do |f| %>
  <% if @ldapserver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ldapserver.errors.count, "error") %> prohibited this ldapserver from being saved:</h2>

      <ul>
      <% @ldapserver.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :domain %><br>
    <%= f.text_field :domain, class: "form-control" %>
   <p>Example: intranet.local</p>
  </div>
  <div class="field">
    <%= f.label :host %><br>
    <%= f.text_field :host, class: "form-control" %>
    <p>Example: 172.16.0.1</p>
  </div>
  <div class="field">
    <%= f.label :port %><br>
    <%= f.text_field :port, class: "form-control" %>
    <p>Example: 389</p>
  </div>
  <div class="field">
    <%= f.label "Login Attribute" %><br>
    <%= f.select :attributename, [['sAMAccountName','sAMAccountName']], {class: "form-control"} %>
  </div>
  <div class="field">
    <%= f.label "Base DN" %><br>
    <%= f.text_field :base, class: "form-control" %>
    <p>Example: CN=Users,DC=intranet,DC=local</p>
  </div>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, class: "form-control" %>
    <p>Example: CN=NewReq Admin,CN=Users,DC=intranet,DC=local</p>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :method %><br>
    <%= f.select :method, [['Simple','simple'],['Anonymous','anonymous']], {class: "form-control"} %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
